<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edtBusca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activities.ListaContatosCelularActivity">

    <LinearLayout
        android:id="@+id/layoutH"
        android:layout_width="371dp"
        android:layout_height="37dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#88FCD3C6"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgLupaBuscar"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="#DBE4F9"
            app:srcCompat="@drawable/ic_action_buscar"></ImageView>

        <EditText
            android:id="@+id/edtBuscar"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:background="#DBE4F9"
            android:ems="10"
            android:hint="Seus contatos..."
            android:inputType="textPersonName"
            android:textColor="#9764AA"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#8E8ECC"
            android:onClick="onClickBuscar"
            android:text="Buscar"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listContatosCelular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="#DBE4F9"
        android:divider="#FF5722"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutH" />

</androidx.constraintlayout.widget.ConstraintLayout>